pipeline {
    agent any
    stages {
        stage('Stage before') {
            steps {
                echo 'Do something before'
            }
        }
        stage('Build on AWS CodeBuild') {
            steps {
                awsCodeBuild credentialsType: 'keys', projectName: 'github-project', region: 'eu-west-1', sourceControlType: 'project'
            }
        }
        stage('Stage after') {
            steps {
                echo 'Do something after'
            }
        }
    }
}